.special-contact-form
  padding 20px
  max-width 28em
  margin 0 auto
  span, input, select, textarea
    font-size 22px
    background transparent
    display inline
    line-height 1em
    margin 0
  input, input:focus, select, select:focus, textarea, textarea:focus, button:focus
    border none
    outline none
    text-decoration: none;
    background-image: linear-gradient(to bottom, rgba(0,0,0,0) 50%, rgba(0,0,0,0.6) 50%);
    background-repeat: repeat-x;
    background-size: 2px 2px;
    background-position: 0 23px;
  textarea
    display block
  .send-btn
    text-align right
    display block
    button[type="submit"]
      margin-top 1em
      background rgba(0,0,0,0.1)
      border none
      border-radius .5em
      padding .5em 1em
    button[type="submit"]:hover
      background rgba(0,0,0,0.2)
      cursor pointer